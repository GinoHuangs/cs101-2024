#include <string.h>
#include <stdio.h>
struct Book{
    int id;
    int price;
    char title[100];
};
int total_price(struct Book books[], int num_books) {
    int total = 0;
    for (int i = 0; i < num_books; i++) {
        total += books[i].price;
    }
    return total;
}

void list_books(struct Book books[],int num_books,int id){
    for(int i=0;i<num_books;i++){
        if(books[i].id == id){
            printf("%d %s\n",books[i].price,books[i].title);
            return;
        }
    }
    printf("book is not founded\n");
}
int main()
{
    struct Book books[] = {
    {1, 1000,"All the Light We Cannot See"},
    {2, 300,"The 38 Letters from J.D. Rockefeller to his son"},
    {3, 1000,"The Ballad of Songbirds and Snakes"},
    {4, 550,"Killers of the Flower Moon"},
    {5, 870,"Elon Musk"},
    {6, 1344,"Milk and Honey 12-Month 2024"}
    };
    int num_books = sizeof(books)/sizeof(books[0]);
    int input;
    scanf("%d", &input);
    switch(input){
        case 0:
        printf("%d\n",total_price(books,num_books));
        break;
        case 1 ... 6:
        list_books(books,num_books,input);
        break;
        default:
        printf("Invailid choise\n");
    }

    return 0;
}
